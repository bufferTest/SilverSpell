<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/permanent_marker"
        android:text="Today Price"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_gold_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Gold price"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_18ssp"
        android:fontFamily="@font/permanent_marker"
        app:layout_constraintBottom_toBottomOf="@+id/et_gold_price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_gold_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="@+id/et_gold_price" />

    <EditText
        android:id="@+id/et_gold_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@null"
        android:gravity="center"
        android:textSize="@dimen/_18ssp"
        android:hint="enter price"
        android:inputType="number"
        android:digits="0123456789"
        android:fontFamily="@font/permanent_marker"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintLeft_toRightOf="@+id/tv_gold_price"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_silver_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Silver price"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_18ssp"
        android:fontFamily="@font/permanent_marker"
        app:layout_constraintBottom_toBottomOf="@+id/et_silver_price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_silver_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="@+id/et_silver_price" />

    <EditText
        android:id="@+id/et_silver_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@null"
        android:gravity="center"
        android:inputType="number"
        android:digits="0123456789"
        android:textSize="@dimen/_18ssp"
        android:hint="enter price"
        android:fontFamily="@font/permanent_marker"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintLeft_toRightOf="@+id/tv_silver_price"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_gold_price" />

    <Button
        android:id="@+id/btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/permanent_marker"
        android:layout_marginTop="@dimen/_35sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_silver_price" />

</android.support.constraint.ConstraintLayout>